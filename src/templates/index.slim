- @page_title = "Freeware for Windows"

/ .highlight
/   .container
/     h1 = @page_title

.container
  .row
    .col.span-8
      h2 Freeware for Windows
      - softwares.each_slice 2 do |row|
        .row
          - row.each do |software|
            .card.col.span-6
              h3: a href="/software/#{software.id}" = software.short_name
              p = software.summary

    .col.span-4
      h2 Open Source
      p All my Open Source projects.
      a href="https://github.dannyben.com"
        img src='/assets/images/github.png'  style='background: #e4e4e4'

      h2 Trailer Punk
      p Watch trailers for the latest and most wanted movies.
      a href="https://trailerpunk.com"
        img src='/assets/images/screenshots/punk.png'
